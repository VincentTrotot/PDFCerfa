{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    {% if pdf is defined %}
        <object data="data:application/pdf;base64,{{ pdf }}" type="application/pdf" width="100%" style="aspect-ratio:210/297"></object>
        <a href="data:application/pdf;base64,{{ pdf }}" target="_blank">Voir le PDF</a>
        <a href="data:application/pdf;base64,{{ pdf }}" download="cerfa.pdf">Télécharger le PDF</a>
    {% endif %}
</div>
{% endblock %}
